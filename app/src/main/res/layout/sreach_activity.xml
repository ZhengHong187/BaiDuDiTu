<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edit_sreach"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="输入搜索内容"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_sreach"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:textColor="@drawable/btn_text_bg"
            android:background="@drawable/sreach_btn_bg"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d9"
        android:layout_marginTop="6dp"/>
    
    <ListView
        android:id="@+id/sreach_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#d6d6d9"
        android:dividerHeight="1dp"/>
    
</LinearLayout>